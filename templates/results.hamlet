<h3.page-header>#{displayCompetition competition}

<a href=@{CompetitionScoresR cid} .btn .btn-default .btn-block .btn-lg>_{MsgHoleScores}

$forall (d, msg) <- divisions
  <div .panel .panel-primary>
    <div .panel-heading>_{msg}
    <table .table>
      <tbody>
        $forall (user, division, rounds) <- sortedPlayers
          $if division == d
            <tr>
              <td .middle>
                #{userName user}
              <td>
                <div .pull-right .result>
                  $if dnf rounds
                    DNF
                  $else
                    #{countTotal rounds} (
                    $if countToPar holes rounds == 0
                      E
                    $else
                      $if countToPar holes rounds > 0
                        +
                      #{countToPar holes rounds}
                    )

$if length sortedHandicaps > 0
  <div .panel .panel-primary>
    <div .panel-heading>_{MsgHandicapResults}
    <table .table>
      <tbody>
        $forall ((user, _, rounds), hc) <- sortedHandicaps
          <tr>
            <td .middle>
              #{userName user}
            <td>
              <div .pull-right .result>
                #{hc}