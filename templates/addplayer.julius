(function() {

  var nameInput = $("form#add-player-form input").eq(1);
  var emailInput = $("form#add-player-form input").eq(2);

  var players = $("div.search-container div.search-container-item");

  players.on('click', function() {
    var self = $(this);
    var name = self.data('name');
    var email = self.data('email');
    nameInput.val(name);
    emailInput.val(email);
  });

})();