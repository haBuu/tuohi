(function() {

  var listview = $("ul");
  var notificationLinks = listview.find("a#notification");

  notificationLinks.on("click", function() {
    var self = $(this);
    var item = self.parent();
    var url = self.data("url");
    // remove from db
    $.ajax({
      type: 'POST',
      url: url
    });
    // remove from page
    item.remove();
  });

})();