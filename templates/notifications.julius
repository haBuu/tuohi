(function() {

  var list = $("ul");
  var removeButtons = list.find("li button");

  removeButtons.on("click", function() {
    var self = $(this);
    var item = self.parent();
    var url = self.data("url");
    // remove from db
    $.ajax({
      type: 'POST',
      url: url,
      success: function() {
        // remove from page
        item.remove();
      }
    });
  });

})();