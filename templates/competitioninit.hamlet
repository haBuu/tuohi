<div data-role="page">
  ^{headerWidget}

  <div data-role="content">
    <div .content-primary>

      <form method=post action=@{CompetitionR cid}#form enctype=#{formEnctype}>
        ^{formWidget}

      <ol data-role="listview" data-inset="true" data-split-icon="delete">

        <li data-role="list-divider">_{MsgNotPresent}
        $forall (E.Value sid, E.Value confirmed, E.Value _, E.Value name) <- signups
          $if not confirmed
            <li>
              <a data-url=@{ConfirmSignUpR sid} #confirm-signup >#{name}
              <a data-url=@{RemoveSignUpR sid} #remove-signup data-rel="popup" data-position-to="window" data-transition="pop">#{name}

        <li data-role="list-divider" data-split-icon="delete">_{MsgPresent}
        $forall (E.Value sid, E.Value confirmed, E.Value _, E.Value name) <- signups
          $if confirmed
            <li>
              <a>#{name}
              <a data-url=@{RemoveSignUpR sid} id="remove-signup" data-rel="popup" data-position-to="window" data-transition="pop">#{name}

      <a href=@{AdminR} data-role="button">_{MsgBack}