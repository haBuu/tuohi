User
  name Text
  email Text
  password Text Maybe -- Password may not be set yet
  verkey Text Maybe -- Used for resetting passwords
  verified Bool default=False
  admin Bool default=False
  superAdmin Bool default=False
  permissions [Permission]
  UniqueUser email
  deriving Typeable
  deriving Show

Competition
  layoutId LayoutId
  date Day
  name Text
  playerLimit Int
  state CompetitionState default=Init
  password Text
  serieId SerieId Maybe
  UniqueCompetition layoutId date name
  deriving Show

Serie
  name Text
  UniqueSerie name
  deriving Show

SignUp
  userId UserId
  competitionId CompetitionId
  confirmed Bool default=False
  division Division default=MPO
  UniqueSignUp userId competitionId
  deriving Show

Round
  userId UserId
  competitionId CompetitionId
  state RoundState default=Started
  roundnumber Int
  groupnumber Int
  UniqueRound userId competitionId roundnumber
  deriving Show

Score
  roundId RoundId
  holeId HoleId
  score Int
  UniqueScore roundId holeId
  deriving Show

Course
  name Text
  UniqueCourse name
  deriving Show

Layout
  courseId CourseId
  name Text
  description Text
  UniqueLayout courseId name
  deriving Show

Hole
  layoutId LayoutId
  number Int
  par Int
  UniqueHole layoutId number
  deriving Show

Notification
  content Textarea
  user UserId
  date UTCTime
  deriving Show